<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>librarianServiceServlet</servlet-name>
		<servlet-class>ru.lsv.gwtlib.server.LibrarianServlet</servlet-class>
		<init-param>
			<param-name>storagePath</param-name>
			<param-value>jdbc:postgresql://192.168.100.100/librarian</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>librarianServiceServlet</servlet-name>
		<url-pattern>/librarian_gwt/librarian</url-pattern>
	</servlet-mapping>


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Librarian_GWT.html</welcome-file>
	</welcome-file-list>

</web-app>
