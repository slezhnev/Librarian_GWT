<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:Grid>
		<g:row>
			<g:customCell>
				<g:Label>
					<ui:msg key="username">User name</ui:msg>
					:
				</g:Label>
			</g:customCell>
			<g:customCell>
				<g:TextBox ui:field="userNameEdit" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label>
					<ui:msg key="password">Password</ui:msg>
					:
				</g:Label>
			</g:customCell>
			<g:customCell>
				<g:PasswordTextBox ui:field="passwordEdit" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="" />
			</g:customCell>
			<g:customCell>
				<g:CheckBox value="true" ui:field="stayLoggedCB" checked="true">
					<ui:msg key="staylogged">Stay
						logged</ui:msg>
				</g:CheckBox>
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="" />
			</g:customCell>
			<g:customCell>
				<g:Label text="errorLabel" ui:field="errorLabel"
					styleName="serverResponseLabelError" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="" />
			</g:customCell>
			<g:customCell>
				<g:Button ui:field="loginBtn">
					<ui:msg key="login">Login</ui:msg>
				</g:Button>
			</g:customCell>
		</g:row>
	</g:Grid>
</ui:UiBinder> 