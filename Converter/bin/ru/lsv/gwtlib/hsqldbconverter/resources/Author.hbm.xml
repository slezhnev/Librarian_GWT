<?xml version="1.0" encoding='utf-8'?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.lsv.gwtlib.hsqldbconverter.data.HAuthor" table="Author">
        <id name="authorId" column="AUTHOR_ID">
            <generator class="native"/>
        </id>
        <property name="firstName"/>
        <property name="middleName"/>
        <property name="lastName"/>
        <bag name="books" inverse="true" table="BOOK_AUTHORS">
           <key column="AUTHOR_ID"/>
           <many-to-many column="BOOK_ID" class="ru.lsv.gwtlib.hsqldbconverter.data.HBook"/>
        </bag>
    </class>
</hibernate-mapping>

